/* breakpoints */
$screen-lg = 954px
$lg = $screen-lg

$screen-md = 800px
$md = $screen-md

$screen-sm = 600px
$sm = $screen-sm

$xs = 420px

$breakpoints = {
  xs: 0
  sm: $screen-sm
  md: $screen-md
  lg: $screen-lg
}

screen(size)
	@media(max-width: size)
		{block}

screen-up(size)
	@media(min-width: size + 1)
		{block}
