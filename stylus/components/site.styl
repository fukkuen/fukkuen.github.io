body
	margin 0
	padding 0
	font-size 15px
	font-family $font-family
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	background #EEEEEE
	line-height 1.67
	color $text-prominent-grey

p
	margin 16px 0
	&:first-child
		margin-top 0
	&:last-child
		margin-bottom 0

a
	text-decoration none
	color inherit

*
	box-sizing border-box

img
	max-width 100%

section
	margin-bottom 48px

iframe
	max-width 100%
