.column-list
  display flex
  align-items center

.page
  margin 0 auto
  max-width 800px
  padding 0 24px
  header
    margin-bottom 48px;
    font-weight: bold;
    letter-spacing: 2px;
    text-align: center;
    img
      margin-bottom 24px

	h3
		font-size 1rem
		margin-top 48px
		&:first-child
			margin-top 0
		&:last-child
			margin-bottom 0

.section
	background white
	padding 24px
	border-radius 6px
	margin-bottom 24px

.quote
	padding-left 24px
	border-left 12px solid #f0f0f0
	margin 48px 0 24px 0
	&:first-child
		margin-top 0
	&:last-child
		margin-bottom 0
	*
		margin 0

.h100
	height 100%

.w100
	width 100%

.dl-ac
	display flex
	align-items center
	&.jc
		justify-content center

.spacer
	flex 1

.dl-container
	padding 0 32px
	+screen($xs)
		padding 0 24px

.dl-page-container
	padding 64px 32px 24px
	+screen($xs)
		padding 64px 24px 24px

.flex-cc
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center

.text-align-right
	text-align right

.text-align-left
	text-align left

.text-align-center
	text-align center

.flex
	display flex
	&.wrap
		flex-wrap wrap

.dl-row
	display flex
	margin 0 -8px
	.dl-col
		width 100%
		padding-left 8px
		padding-right 8px

for $size, $width in $breakpoints
	@media all and (min-width: $width)
		for n in (1..12)
			.dl-col.{$size}{n}
				flex-basis: (n / 12 * 100)%
				flex-grow: 0
				max-width: (n / 12 * 100)%
