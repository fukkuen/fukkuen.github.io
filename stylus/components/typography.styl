@import '../variable.styl'

.head0
	font-family $font-family
	font-size 48px
	line-height 1.11em
	font-weight normal

.head1
	font-family $font-family
	font-size 36px
	line-height 1.11em
	font-weight normal

.head2
	font-family $font-family
	font-size 32px
	line-height 1.2em
	font-weight normal

.head3
	font-family $font-family
	font-size 24px
	line-height 1.16em
	font-weight normal

.headline, .title
	font-family $font-family
	font-size 18px
	line-height 1.33em
	font-weight 600

.subhead1
	font-family $font-family
	font-size 16px
	line-height 1.33em
	font-weight bold

.subhead2
	font-family $font-family
	font-size 14px
	line-height 1.25em
	font-weight bold

.body1
	font-family $font-family
	font-size 14px
	line-height 1.57em
	font-weight normal

.body2
	font-family $font-family
	font-size 12px
	line-height 1.67em
	font-weight normal
	&.compact
		line-height 1.33em

.caption1
	font-family $font-family
	font-size 11px
	line-height 1.33em
	font-weight normal

.caption2
	font-family $font-family
	font-size 10px
	line-height 1.33em
	font-weight normal
